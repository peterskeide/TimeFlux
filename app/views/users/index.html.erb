
<h1>Users</h1>

<%= render :partial => "admin/menu" %>

<%= will_paginate @users %>

<table class="regular">
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Login</th>
    <th>Status</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.fullname %></td>
    <td><%=h user.department.try(:name) %></td>
    <td><%=h user.login %></td>
    <td><%=h user.operative_status %><%= user.admin ? ", admin" : ''  %></td>
    <td><%= link_to image_tag("magnifier.png", :title => "Show"), user_path(user) %></td>
    <td><%= link_to image_tag("pencil.png", :title => "Edit"), edit_user_path(user) %></td>
    <td><%= link_to image_tag("delete.png", :title => "Delete"), user_path(user), :method => :delete, :confirm => "Really remove #{user.name}?" %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @users %>
<hr/>
<p>
	<%= link_to 'New user', new_user_path %>
</p>