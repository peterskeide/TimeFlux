<p class="notice"><%= flash[:notice] %></p>
<% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <br />
    <%= f.submit "Login" %>
<% end %>

<%= set_focus_to_id 'user_session_login' %>