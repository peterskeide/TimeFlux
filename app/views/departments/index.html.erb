<h1>Listing departments</h1>

<%= render :partial => 'admin/menu' -%>

<table class="regular">
  <tr>
    <th>Department ID</th>
    <th>Name</th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%=h department.internal_id %></td>
    <td><%=h department.name %></td>
    <td><%= link_to image_tag("magnifier.png", :title => "Show"), department %></td>
    <td><%= link_to image_tag("pencil.png", :title => "Edit"), edit_department_path(department) %></td>
    <td><%= link_to image_tag("delete.png", :title => "Delete"), department, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New department', new_department_path %>